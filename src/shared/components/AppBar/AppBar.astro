---
import { cn } from "@/shared/lib/utils";
import { ThemeToggleButton } from "../ThemeToggleButton";
import { FaConnectdevelop } from "react-icons/fa";
---

<nav
  class={cn(
    `
      p-2
      fixed top-0 left-0 
      w-full z-50 flex items-center justify-between
      bg-background/70 backdrop-blur-lg
      shadow-2xs
    `,
  )}
>
  <div class="flex items-center justify-between container mx-auto">
    <div class="flex items-center gap-2">
      <FaConnectdevelop
        className="w-6 h-6 text-blue-500 animate-spin animation-duration-[20s]"
      />
      <span class="font-bold text-sm md:text-base">Diego Tineo</span>
      <span class="font-light text-xs">| Full Stack Developer</span>
    </div>

    <div class="flex items-center justify-end gap-2">
      <ThemeToggleButton client:load />
    </div>
  </div>
</nav>
