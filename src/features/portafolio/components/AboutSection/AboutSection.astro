---
import AnimatedContainer from "@/shared/components/animated/AnimatedContainer";
import { MotionLine } from "@/shared/components/MotionLine/MotionLine";
import { SectionTitle } from "@/shared/components/SectionTitle/SectionTitle";
import { cn } from "@/shared/lib/utils";
import AboutAICard from "./components/AboutAICard.astro";

// Ingeniería de Resiliencia: Diseño sistemas auditables y escalables, priorizando arquitecturas distribuidas que garantizan la consistencia de la información en entornos de alta transaccionalidad.

// Modernización Estratégica: Especialista en la transición de sistemas obsoletos hacia microservicios, optimizando el ciclo de vida del software (SDLC) mediante CI/CD y containerización con Docker.

// Precisión Visual (UX/UI): Implementación técnica de interfaces donde la estética sirve a la función. Aseguro que la robustez del backend se traduzca en experiencias de usuario intuitivas, fluidas y libres de fricción operativa.

const highlights = [
  {
    title: "Ingeniería de Resiliencia:",
    description:
      "Diseño sistemas auditables y escalables, priorizando arquitecturas que garantizan la consistencia de la información en entornos transaccionales.",
  },
  {
    title: "Modernización Estratégica:",
    description:
      "Especialista en la transición de sistemas obsoletos hacia microservicios, optimizando el ciclo de vida del software (SDLC) mediante CI/CD y containerización con Docker.",
  },
  {
    title: "Precisión Visual (UX/UI):",
    description:
      "Implementación técnica de interfaces donde la estética sirve a la función. Aseguro que la robustez del backend se traduzca en experiencias de usuario intuitivas, fluidas y libres de fricción operativa.",
  }
];
---

<section
  class="w-full mx-auto p-4 bg-linear-to-b from-white dark:from-black to-background"
>
  <div class="container mx-auto">
    <SectionTitle title="Sobre mí:" client:load />

    <div class="flex my-6 gap-2">
      <MotionLine client:load />

      {/* XS/SM/MD: Single column, highlights stacked, then AboutAICard */}
      {/* LG: 2-column grid for highlights, then full-width AboutAICard */}
      {/* XL: 3-column grid, 2 cols for highlights, 1 col for AboutAICard */}
      <div class="text-sm mx-auto w-full p-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-5 lg:gap-10">
          {/* Highlights column(s) */}
          <div class="lg:col-span-2 xl:col-span-2 grid grid-cols-1 lg:grid-cols-2 gap-5 lg:gap-10">
            {
              highlights.map((highlight) => (
                <AnimatedContainer client:load once={false}>
                  <div class="flex flex-col gap-1">
                    <h3
                      class={cn(
                        "text-sky-400 font-bold",
                        "text-xl",
                        "lg:text-xl",
                        "xl:text-2xl",
                      )}
                    >
                      {highlight.title}
                    </h3>
                    <p class={cn("text-sm", "lg:text-sm", "xl:text-base")}>
                      {highlight.description}
                    </p>
                  </div>
                </AnimatedContainer>
              ))
            }
          </div>

          {/* AboutAICard: Full width on XS/SM/MD/LG, side column on XL */}
          <div class="lg:col-span-2 xl:col-span-1">
            <AboutAICard />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
