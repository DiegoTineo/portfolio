---
import { MotionLine } from "@/shared/components/MotionLine/MotionLine";
import { SectionTitle } from "@/shared/components/SectionTitle/SectionTitle";

const highlights = [
  {
    title: "Ingeniería de Resiliencia:",
    description: "Diseño sistemas escalables, auditables y de alta disponibilidad, garantizando la integridad de los datos."
  },
  {
    title: "Modernización de Infraestructura:",
    description: "Experiencia transformando sistemas obsoletos en arquitecturas modernas mediante la optimización de CI/CD y la containerización estratégica (Docker)."
  },
  {
    title: "Precisión Visual (UX/UI):",
    description: "Implementación técnica rigurosa de interfaces, asegurando que la complejidad del backend se traduzca en una experiencia de usuario fluida y eficiente."
  }
];
---

<section
  class="w-full mx-auto p-4 bg-linear-to-b from-white dark:from-black to-background"
>
  <div class="container mx-auto">
    <SectionTitle title="Sobre mí:" client:load />

    <div class="flex my-6 gap-2">
      <MotionLine client:load />

      <div class="flex flex-col lg:flex-row w-full gap-5">
        {highlights.map((highlight) => (
          <div>
            <h3 class="text-sky-400 font-bold">{highlight.title}</h3>
            <p>{highlight.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
