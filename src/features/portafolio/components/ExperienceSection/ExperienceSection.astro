---
import { SectionTitle } from "@/shared/components/SectionTitle/SectionTitle";
import { Timeline } from "./components/Timeline/Timeline";
import AnimatedContainer from "@/shared/components/animated/AnimatedContainer";
---

<section
  class="bg-linear-to-b from-transparent via-indigo-500/6 to-transparent"
>
  <div class="w-full container mx-auto p-4">
    <SectionTitle title="Experiencia:" client:load />

    <div class="flex flex-col mt-5 px-2 lg:px-7 gap-2 lg:text-lg ">
      <AnimatedContainer client:load>
      <p>
        <b class="text-sky-400 font-bold text-lg">4 años </b> transformando arquitecturas
        obsoletas y construyendo sistemas donde la resiliencia es el estándar.
      </p>
    </AnimatedContainer>
    </div>
    
  </div>
  <div class="container mx-auto mt-4">
    <Timeline client:load />
  </div>
</section>
